    </build>
    <profiles>
        <profile>
            <id>FullSuit</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire</artifactId>
                        <version>2.22.2</version>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>FullSuit</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>Add and subtract</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire</artifactId>
                        <version>2.22.2</version>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>FirstOrderSuit</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>Multiply and divide</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire</artifactId>
                        <version>2.22.2</version>
                        <configuration>
                            <suiteXmlFiles>
                                <suiteXmlFile>SecondOrderSuit</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
